{
  "importMap": "./import_map.json",
  "tasks": {
    "build": "deno bundle --config=deno.json --watch ./client/scripts/main.ts ./public/build/main.js",
    "debug": "deno run -A --config=deno.json --watch server/server.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/preact"
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "indentWidth": 2,
      "useTabs": false
    }
  }
}
